<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    android:layout_marginTop="10dp"
    android:backgroundTint="@android:color/white"
    android:paddingHorizontal="5dp"
    app:cardCornerRadius="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp">
        <!-- Property Image-->


        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imgProperty"
            android:layout_width="130dp"
            android:layout_height="182dp"
            android:layout_alignParentStart="true"
            android:layout_marginHorizontal="5dp"
            android:layout_marginTop="5dp"
            android:scaleType="centerCrop"
            android:src="@drawable/firstpicture" />

        <LinearLayout
            android:id="@+id/lo_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@id/imgProperty"
            android:orientation="vertical">

            <!--First Line-->
            <LinearLayout
                android:id="@+id/lo_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_character"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/poppins_medium"
                    android:text="$"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/propertyPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/poppins_medium"
                    android:text=" Price"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/perMonth"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/poppins"
                    android:gravity="center_vertical"
                    android:text=" Per Month"
                    android:textColor="@color/black_500"
                    android:textSize="16sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/propertyName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/poppins_medium"
                android:gravity="center_vertical"
                android:text="@string/property_name"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/poppins_light"
                android:text="@string/property_address"
                android:textColor="@color/black"
                android:textSize="11sp" />


            <!--Info item-->
            <LinearLayout
                android:id="@+id/lo_sub_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <!--Area-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/custom_sub_info"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="2dp">

                    <ImageView
                        android:id="@+id/imgArea"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/ic_are" />

                    <TextView
                        android:id="@+id/txtArea"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:fontFamily="@font/poppins_light"
                        android:gravity="bottom"
                        android:text="658 sqft"
                        android:textColor="@color/white"
                        android:textSize="8sp" />

                </LinearLayout>

                <!--Room-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/custom_sub_info"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="2dp">

                    <ImageView
                        android:id="@+id/imgRooms"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/ic_bed" />

                    <TextView
                        android:id="@+id/txtRoom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:fontFamily="@font/poppins_light"
                        android:gravity="bottom"
                        android:text="2 rooms"
                        android:textColor="@color/white"
                        android:textSize="8sp" />

                </LinearLayout>

                <!--Bathroom-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/custom_sub_info"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="2dp">

                    <ImageView
                        android:id="@+id/imgBedroom"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/ic_bathroom" />

                    <TextView
                        android:id="@+id/txtBedroo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:fontFamily="@font/poppins_light"
                        android:text="2 rooms"
                        android:textColor="@color/white"
                        android:textSize="8sp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="31dp"
            android:layout_below="@id/lo_info"
            android:layout_marginStart="-5dp"
            android:layout_marginTop="21dp"
            android:layout_marginBottom="10dp"
            android:layout_toEndOf="@id/imgProperty"
            android:background="@drawable/custom_btn_rent"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/rentNow"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="9dp" />

    </RelativeLayout>


</androidx.cardview.widget.CardView>