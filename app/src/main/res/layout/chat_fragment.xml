<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_marginEnd="0dp"
            android:layout_marginStart="0dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/img_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/img_detail"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:src="@color/quantum_pink"
                    app:shapeAppearanceOverlay="@style/CustomDetailItem" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_card"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="0dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="50dp"
        tools:ignore="MissingConstraints">
    <androidx.cardview.widget.CardView
        app:cardCornerRadius="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="215dp"
        android:scaleType="centerCrop"
        >
        <ScrollView
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_card"
            android:layout_width="match_parent"

            android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <!--First -->
            <RadioGroup
                android:id="@+id/rg_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
            <RadioButton
                android:id="@+id/amenities_detail"
                android:textSize="23dp"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="Amenities"
                android:gravity="center"
                android:button="@color/gray"
                android:fontFamily="@font/nunito_bold"
                android:padding="11dp"
                android:background="@drawable/radio_selector"
                android:textColor="@drawable/text_color"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"/>
            <RadioButton
                android:id="@+id/owner_detail"
                android:textSize="23dp"
                android:layout_toEndOf="@+id/amenities_detail"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="Owner"
                android:gravity="center"
                android:button="@color/gray"
                android:fontFamily="@font/nunito_bold"
                android:padding="11dp"
                android:background="@drawable/radio_selector"
                android:textColor="@drawable/text_color"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"/>
            <RadioButton
                android:id="@+id/review_detail"
                android:textSize="23dp"
                android:layout_toEndOf="@+id/owner_detail"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="Review"
                android:gravity="center"
                android:button="@color/gray"
                android:fontFamily="@font/nunito_bold"
                android:padding="11dp"
                android:background="@drawable/radio_selector"
                android:textColor="@drawable/text_color"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"/>
            </RadioGroup>
            <TextView
                android:id="@+id/line_1"
                android:layout_below="@+id/rg_1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black"/>
            <!--Second -->
            <LinearLayout
                android:id="@+id/primary_info"
                android:layout_below="@id/line_1"
                android:layout_width="match_parent"
                android:layout_height="100dp">
                <androidx.cardview.widget.CardView
                    android:layout_margin="10dp"
                    app:cardCornerRadius="10dp"
                    app:cardBackgroundColor="@color/gray1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_marginTop="10dp"
                        android:id="@+id/name_detail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Name"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textSize="20dp"
                        />
                    <TextView
                        android:gravity="center"
                        android:id="@+id/address_detail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="address"
                        android:textSize="20dp"
                        android:layout_marginTop="35dp"
                        />

                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <TextView
                android:padding="5dp"
                android:layout_marginLeft="10dp"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="@color/black_500"
                android:id="@+id/tv_rental"
                android:layout_below="@+id/primary_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rental Detail"/>
            <!--rental detail -->

            <LinearLayout
                android:id="@+id/rent_info"
                android:layout_below="@id/tv_rental"
                android:layout_width="match_parent"
                android:layout_height="130dp">
                <androidx.cardview.widget.CardView
                    android:layout_margin="10dp"
                    app:cardCornerRadius="10dp"
                    app:cardBackgroundColor="@color/gray1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <!--First -->
                        <LinearLayout
                            android:padding="10dp"
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            >
                            <TextView
                                android:textSize="15dp"
                                android:padding="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Rent Price"/>
                            <TextView
                                android:textSize="15dp"
                                android:padding="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Deposite"/>
                            <TextView
                                android:textSize="15dp"
                                android:padding="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Maintainence"/>
                        </LinearLayout>
                        <!--Second -->
                        <LinearLayout
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="80dp"
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/black_500"/>
                        <!--Third -->
                        <LinearLayout
                            android:padding="5dp"
                            android:layout_marginStart="30dp"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <!--First -->
                            <LinearLayout
                                android:layout_width="147dp"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="5dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginEnd="3dp"
                                    android:fontFamily="@font/poppins_medium"
                                    android:text="$"
                                    android:textColor="@color/black"
                                    android:textSize="16sp" />

                                <TextView
                                    android:id="@+id/tv_rentprice_item"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginEnd="3dp"
                                    android:fontFamily="@font/poppins_medium"
                                    android:text="@string/txt_price"
                                    android:textColor="@color/first"
                                    android:textSize="16sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center_vertical"
                                    android:fontFamily="@font/poppins"
                                    android:gravity="center_vertical"
                                    android:text="@string/txt_per_month"
                                    android:textColor="@color/black_500"
                                    android:textSize="14sp" />

                            </LinearLayout>
                            <!--Second -->
                            <LinearLayout
                                android:paddingLeft="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView

                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginEnd="3dp"
                                    android:fontFamily="@font/poppins_medium"
                                    android:text="$"
                                    android:textColor="@color/black"
                                    android:textSize="16sp" />

                                <TextView
                                    android:id="@+id/tv_deposite_item"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginEnd="3dp"
                                    android:fontFamily="@font/poppins_medium"
                                    android:text="@string/txt_price"
                                    android:textColor="@color/first"
                                    android:textSize="16sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center_vertical"
                                    android:fontFamily="@font/poppins"
                                    android:gravity="center_vertical"
                                    android:text="@string/txt_per_month"
                                    android:textColor="@color/black_500"
                                    android:textSize="14sp" />

                            </LinearLayout>
                            <!--Third -->
                            <LinearLayout
                                android:paddingLeft="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginEnd="3dp"
                                    android:fontFamily="@font/poppins_medium"
                                    android:text="$"
                                    android:textColor="@color/black"
                                    android:textSize="16sp" />

                                <TextView
                                    android:id="@+id/tv_maintain_item"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginEnd="3dp"
                                    android:fontFamily="@font/poppins_medium"
                                    android:text="@string/txt_price"
                                    android:textColor="@color/first"
                                    android:textSize="16sp" />


                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!--requirement for tenants -->
            <TextView
                android:padding="5dp"
                android:layout_marginLeft="10dp"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="@color/black_500"
                android:id="@+id/tv_require"
                android:layout_below="@+id/rent_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Requirement for tenants"/>


            <LinearLayout
                android:id="@+id/layout_req"
                android:layout_below="@id/tv_require"
                android:layout_width="match_parent"
                android:layout_height="130dp">
                <androidx.cardview.widget.CardView
                    android:layout_margin="10dp"
                    app:cardCornerRadius="10dp"
                    app:cardBackgroundColor="@color/gray1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <!--First -->
                        <LinearLayout
                            android:padding="10dp"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            >
                            <TextView
                                android:id="@+id/req_1"
                                android:textSize="15dp"
                                android:padding="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="First requirement"/>
                            <TextView
                                android:id="@+id/req_2"
                                android:textSize="15dp"
                                android:padding="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Second requirement"/>
                            <TextView
                                android:id="@+id/req_3"
                                android:textSize="15dp"
                                android:padding="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Third requirement"/>
                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <!--Property detail -->
            <TextView
                android:padding="5dp"
                android:layout_marginLeft="10dp"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="@color/black_500"
                android:id="@+id/tv_property_detail"
                android:layout_below="@+id/layout_req"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Property Detail"/>
            <LinearLayout
                android:id="@+id/property_info"
                android:layout_below="@id/tv_property_detail"
                android:layout_width="match_parent"
                android:layout_height="170dp">
                <androidx.cardview.widget.CardView
                    android:layout_margin="10dp"
                    app:cardCornerRadius="10dp"
                    app:cardBackgroundColor="@color/gray1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_marginLeft="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:gravity="center"
                        >
                        <TextView

                            android:textSize="15dp"
                            android:id="@+id/tv_bedroom"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"/>
                        <TextView
                            android:textStyle="bold"
                            android:layout_marginLeft="5dp"
                            android:textSize="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bedrooms"/>

                    </LinearLayout>
                        <LinearLayout
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:gravity="center"
                            >
                            <TextView
                                android:textSize="15dp"
                                android:id="@+id/tv_bathroom"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"/>
                            <TextView
                                android:textStyle="bold"
                                android:layout_marginLeft="5dp"
                                android:textSize="15dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Bathrooms"/>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:gravity="center"
                            >
                            <TextView
                                android:textSize="15dp"
                                android:id="@+id/tv_balcony"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"/>
                            <TextView
                                android:textStyle="bold"
                                android:layout_marginLeft="5dp"
                                android:textSize="15dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Balcony"/>

                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <!--First -->
                        <LinearLayout
                            android:padding="10dp"
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            >
                            <TextView
                                android:paddingLeft="5dp"
                                android:textSize="15dp"
                                android:paddingTop="20dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Area"/>
                            <TextView
                                android:textSize="15dp"
                                android:padding="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Property type"/>
                            <TextView
                                android:textSize="15dp"
                                android:padding="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Furnishing"/>
                            <TextView
                                android:textSize="15dp"
                                android:padding="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Floor"/>
                        </LinearLayout>
                        <!--Second -->
                        <LinearLayout
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="30dp"
                            android:layout_marginLeft="80dp"
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/black_500"/>
                        <!--Third -->
                        <LinearLayout
                            android:padding="5dp"
                            android:layout_marginStart="30dp"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <!--First -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:orientation="horizontal"
                                android:padding="5dp">

                                <TextView
                                    android:layout_marginTop="5dp"

                                    android:id="@+id/tv_area_item"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginEnd="3dp"
                                    android:fontFamily="@font/poppins_medium"
                                    android:text="@string/area"
                                    android:textColor="@color/first"
                                    android:textSize="16sp" />
                                <TextView
                                    android:layout_marginTop="5dp"
                                    android:layout_marginLeft="10dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center_vertical"
                                    android:fontFamily="@font/poppins"
                                    android:gravity="center_vertical"
                                    android:text="sq ft"
                                    android:textColor="@color/black_500"
                                    android:textSize="14sp" />


                            </LinearLayout>
                            <!--Second -->
                            <LinearLayout
                                android:paddingLeft="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tv_ptype_item"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginEnd="3dp"
                                    android:fontFamily="@font/poppins_medium"
                                    android:text="Apartment"
                                    android:textColor="@color/first"
                                    android:textSize="16sp" />



                            </LinearLayout>
                            <!--Third -->
                            <LinearLayout
                                android:paddingLeft="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">



                                <TextView
                                    android:id="@+id/tv_furn_item"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginEnd="3dp"
                                    android:fontFamily="@font/poppins_medium"
                                    android:text="furnished"
                                    android:textColor="@color/first"
                                    android:textSize="16sp" />


                            </LinearLayout>
                            <!--four -->
                            <LinearLayout
                                android:paddingLeft="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">



                                <TextView
                                    android:id="@+id/tv_floor_item"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginEnd="3dp"
                                    android:fontFamily="@font/poppins_medium"
                                    android:text="floor"
                                    android:textColor="@color/first"
                                    android:textSize="16sp" />


                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>
            <!--amenities detail -->
            <TextView
                android:padding="5dp"
                android:layout_marginLeft="10dp"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="@color/black_500"
                android:id="@+id/tv_amen_detail"
                android:layout_below="@+id/property_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Amenities Detail"/>
            <LinearLayout
                android:paddingLeft="10dp"
                android:orientation="horizontal"
                android:id="@+id/amenities_info"
                android:layout_below="@+id/tv_amen_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RadioGroup
                    android:id="@+id/rg_2"
                    android:paddingLeft="60dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <RadioButton
                        android:id="@+id/rb_cardpark"
                        android:textSize="10dp"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:text="Car Parking"
                        android:gravity="center"
                        android:button="@color/gray"
                        android:fontFamily="@font/nunito_bold"
                        android:background="@drawable/bg_circle_red"
                        android:textColor="@color/black_500"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginBottom="5dp">
                    </RadioButton>


                    <RadioButton
                        android:id="@+id/rb_gym"
                        android:textSize="10dp"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:text="Gym"
                        android:gravity="center"
                        android:button="@color/gray"
                        android:fontFamily="@font/nunito_bold"
                        android:background="@drawable/bg_circle_red"
                        android:textColor="@color/black_500"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginBottom="5dp">
                    </RadioButton>
                    <RadioButton
                        android:id="@+id/rb_fuel"
                        android:textSize="10dp"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:text="Fuel station"
                        android:gravity="center"
                        android:button="@color/gray"
                        android:fontFamily="@font/nunito_bold"
                        android:background="@drawable/bg_circle_red"
                        android:textColor="@color/black_500"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginBottom="5dp">
                    </RadioButton>
                    <RadioButton
                        android:id="@+id/rb_park"
                        android:textSize="10dp"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:text="Park"
                        android:gravity="center"
                        android:button="@color/gray"
                        android:fontFamily="@font/nunito_bold"
                        android:background="@drawable/bg_circle_red"
                        android:textColor="@color/black_500"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginBottom="5dp">
                    </RadioButton>
                </RadioGroup>
                
            </LinearLayout>
            <!--amenities detail -->
            <TextView
                android:padding="5dp"
                android:layout_marginLeft="10dp"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="@color/black_500"
                android:id="@+id/neighbourhood"
                android:layout_below="@+id/amenities_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Neighbourhood Detail"/>
            <!--owner detail -->
            <TextView
                android:padding="5dp"
                android:layout_marginLeft="10dp"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="@color/black_500"
                android:id="@+id/owner_detail_item"
                android:layout_below="@+id/neighbourhood"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Owner Detail"/>
            <!--User avatar-->
            <LinearLayout
                android:id="@+id/layout_owner"
                android:paddingLeft="50dp"
                android:orientation="horizontal"
                android:layout_below="@+id/owner_detail_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cvAvatar_detail_item"
                style="@style/CustomCardViewProfile"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="left"
                app:cardElevation="2dp"
                app:cardPreventCornerOverlap="false"
                app:strokeColor="@color/first"
                app:strokeWidth="1dp">
                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/userImg_item"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_baseline_photo_camera_24"
                    app:shapeAppearanceOverlay="@style/CustomeProfileImage" />
            </com.google.android.material.card.MaterialCardView>
            <LinearLayout
                android:layout_marginTop="15dp"
                android:paddingLeft="20dp"
                android:orientation="vertical"
                android:layout_below="@+id/owner_detail_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="16dp"
                    android:id="@+id/tv_nameuser_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Owner Name"/>
                <TextView
                    android:id="@+id/tv_phone_user_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Owner phone"/>
            </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="100dp"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:orientation="vertical">
                    <ImageButton
                        android:id="@+id/btn_call"
                        android:textAllCaps="false"
                        android:textSize="9dp"
                        android:text="Call Now"
                        android:src="@drawable/ic_baseline_call_24"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>
            </LinearLayout>
            <!--review detail -->
            <TextView
                android:padding="5dp"
                android:layout_marginLeft="10dp"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="@color/black_500"
                android:id="@+id/review_item"
                android:layout_below="@+id/layout_owner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Review"/>
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/review_item_layout"
                android:layout_below="@+id/review_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.recyclerview.widget.RecyclerView
                    android:padding="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rcv_reivew_item"/>

            </LinearLayout>
        </RelativeLayout>
        </LinearLayout>
        </ScrollView>



    </androidx.cardview.widget.CardView>
    </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="680dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <Button
                android:id="@+id/btn_write_review"
                android:text="Write a review"
                android:layout_marginLeft="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/btn_contact"
                android:text="Contact Owner"
                android:layout_marginLeft="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>