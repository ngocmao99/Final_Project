<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/black"
        android:text="Address :"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="130dp"
        android:textSize="30dp" />
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/custom_bg_create">

            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <!--Provinces & cities-->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_marginTop="30dp"
                android:id="@+id/tilCreateCity"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/txt_province_city"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                app:boxStrokeColor="@color/white"
                app:boxStrokeWidth="1dp"
                app:endIconMode="dropdown_menu"
                app:errorEnabled="true"
                app:hintTextColor="@color/first"
                >
                <com.google.android.material.textfield.MaterialAutoCompleteTextView
                    android:id="@+id/province"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/poppins"
                    android:inputType="none"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:layout_weight="1"
                    android:textSize="15sp"
                    android:textColor="@color/black"/>
            </com.google.android.material.textfield.TextInputLayout>

                <!--District-->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_marginTop="30dp"
                    android:id="@+id/tilDistrict"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/txt_district"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    app:boxStrokeColor="@color/white"
                    app:boxStrokeWidth="1dp"
                    app:endIconMode="dropdown_menu"
                    app:errorEnabled="true"
                    app:hintTextColor="@color/first"
                    >
                    <com.google.android.material.textfield.MaterialAutoCompleteTextView
                        android:id="@+id/mactvDistrict"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/poppins"
                        android:inputType="none"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp"
                        android:layout_weight="1"
                        android:textSize="15sp"
                        android:textColor="@color/black"/>
                </com.google.android.material.textfield.TextInputLayout>


                <!--Ward-->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_marginTop="30dp"
                    android:id="@+id/tilWard"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/txt_ward"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    app:boxStrokeColor="@color/white"
                    app:boxStrokeWidth="1dp"
                    app:endIconMode="dropdown_menu"
                    app:errorEnabled="true"
                    app:hintTextColor="@color/first"
                    >
                    <com.google.android.material.textfield.MaterialAutoCompleteTextView
                        android:id="@+id/mactvWard"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/poppins"
                        android:inputType="none"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp"
                        android:layout_weight="1"
                        android:textSize="15sp"
                        android:textColor="@color/black"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!--House Number-->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_marginTop="30dp"
                    android:id="@+id/tilHouseNumber"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/txt_houseNumber"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    app:boxStrokeColor="@color/white"
                    app:boxStrokeWidth="1dp"
                    app:endIconMode="dropdown_menu"
                    app:errorEnabled="true"
                    app:hintTextColor="@color/first"
                    >
                    <com.google.android.material.textfield.MaterialAutoCompleteTextView
                        android:id="@+id/houseNumber"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/poppins"
                        android:inputType="none"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp"
                        android:layout_weight="1"
                        android:textSize="15sp"
                        android:textColor="@color/black"/>
                </com.google.android.material.textfield.TextInputLayout>




        </LinearLayout>
        </ScrollView>

    </androidx.cardview.widget.CardView>




</LinearLayout>