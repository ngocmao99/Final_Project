<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true"><shape>
        <solid android:color="@color/first" />
        <stroke android:width="1dp" android:color="@color/first" />
        <corners android:bottomRightRadius="20dp"
            android:topRightRadius="20dp"/>
    </shape></item>
    <item android:state_checked="false"><shape android:shape="rectangle">
        <solid android:color="@color/mint" />
        <stroke android:width="1dp" android:color="@color/mint" />
        <corners android:bottomRightRadius="20dp"
            android:topRightRadius="20dp"/>
    </shape></item>
</selector>